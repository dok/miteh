#!/bin/bash
cmd=$1
options=$2

cmd_path="./$cmd.sh"

if [ -a $cmd_path ]; then
    $cmd_path $2
else
    echo "That command does not exist: $cmd"
    echo "-------------------USAGE----------------------"
    echo "legend: [required]{command} [optional]{name}"
    echo "./smig use {latest|original|name_of_snapshot}"
    echo "./smig copy {original|name_of_snapshot}"
    echo "./smig ls"
    echo "./smig clean"
    echo "----------------------------------------------"
fi
